    background #F8EFEB
    border-top 5px solid color-orange-institucional
.bg-gray-institucional 
    background  color-secondary-institucional

.text-institucional
    color: color-institucional
.text-danger-institucional
    color: color-danger-institucional
.text-gray-institucional
    color: color-gray-institucional   

.container 
    background: #fff 

/*** Css for search general ***/
// .search-product
//     padding 0 20rem   
#group-search-offers
    border-radius 10px
    box-shadow: 5px 5px 8px #c2c2c2
#search-offers
    border-radius 10px 0 0 10px 
    &:focus
        box-shadow none
        border 1px solid color-orange-institucional     
    &::placeholder
        color #e2e2e2
        font-size 18px
#btn-search-offers
    background color-orange-institucional
    color #fff
    border-radius 0 10px 10px 0
    padding 2px 10px
 
#btn-search-alphabeth
    padding-top 15px 
    a   
        border 2px solid "#000"
        font-size 12px
        box-shadow: 2px 5px 8px #c2c2c2
        &:hover 
            border 2px color-orange-institucional   
/*** End css for search general ***/
    
